{
  "version": 2,
  "name": "now-bref-nette",
  "scope": "juicyfx",
  "regions": ["all"],
  "public": true,
  "builds": [
    { "src": "www/index.php", "use": "now-bref@experimental"}
  ],
  "routes": [
    { "src": "/css/(.*)", "dest": "/www/css/$1" },
    { "src": "/js/(.*)", "dest": "/www/js/$1" },
    { "src": "/(.*)", "dest": "/www/index.php" }
  ],
  "build": {
    "env": {
      "NOW_PHP_DEBUG": "1"
    }
  }
}
